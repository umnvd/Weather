<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Weather.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Weather.Regular</item>
    </style>

    <style name="Widget.Weather.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleCentered">true</item>
        <item name="titleTextColor">?android:attr/textColorPrimary</item>
        <item name="titleTextAppearance">@style/TextAppearance.Weather.Title</item>
    </style>

    <style name="Widget.Weather.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorGravity">top</item>
        <item name="tabTextAppearance">@style/TextAppearance.Weather.Tab</item>
    </style>

    <style name="Widget.Weather.CircleDiagram" parent="CircleDiagramDefaultStyle">
        <item name="filledColor">@color/peach</item>
        <item name="blankColor">@color/peach_A25</item>
    </style>

</resources>